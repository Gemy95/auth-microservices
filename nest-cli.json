{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "builder": "tsc",
    "typeCheck": true,
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"],
    "assets": [
      { "include": "**/*.hbs", "watchAssets": true },
      { "include": "/i18n/**/*", "watchAssets": true }
    ],
    "watchAssets": true
  }
}
